@model IEnumerable<Emp>
<head>
	<link href="~/css/stylesheet.css" rel="stylesheet" />
	<style>
		body{
			font-family:'Segoe UI';
		}

		td, tr, th {
			border: 1px solid;
			text-align: center;
			padding: 10px;
		}
	</style>
</head>
<h1>Emplyoee List View</h1>

<a asp-controller="Emp" asp-action="Create">Add Employee</a>
<br /><br />
<table>
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(e=>e.Id)</th>
			<th>@Html.DisplayNameFor(e=>e.Name)</th>
			<th>@Html.DisplayNameFor(e=>e.Dept.Name)</th>
			<th>@Html.DisplayNameFor(e=>e.Salary)</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var data in Model)
		{
			<tr>
				<td>@Html.DisplayFor(e=>data.Id)</td>
				<td>@Html.DisplayFor(e=>data.Name)</td>
				<td>@Html.DisplayFor(e=>data.Dept.Name)</td>
				<td>@Html.DisplayFor(e=>data.Salary)</td>
				<td>
					<a asp-controller="Emp" asp-action="Display" asp-route-id=@data.Id>Display</a>&nbsp;&nbsp;&nbsp;&nbsp;
					<a asp-controller="Emp" asp-action="Edit" asp-route-id=@data.Id>Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
					<a asp-controller="Emp" asp-action="Delete" asp-route-id=@data.Id>Delete</a>&nbsp;&nbsp;&nbsp;&nbsp;
				</td>
			</tr>
		}
	</tbody>
</table>